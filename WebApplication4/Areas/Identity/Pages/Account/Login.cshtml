@page
@model LoginModel

<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <div class="col-md-2 offset-md-5">
                <svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16">
                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                    <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                </svg>
            </div>
            <h2>S'identifier</h2>
            
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <label asp-for="Input.Username" class="form-label">Identifiant</label>
                    <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <br />
                <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Se connecter</button>
                        <a asp-page="./Register"  class="w-100 btn btn-lg btn-primary">S'enregistrer</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
