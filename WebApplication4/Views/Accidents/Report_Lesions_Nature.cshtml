<div class="col-md-8">
    Précisez la nature de la lésion: 
</div>
<div class="row">
    <div class="col" style="border-right: 1px black solid;">
        <ul id="listNatureLesion" style="list-style:none;">
            @foreach (var natureLesion in ViewBag.lesionNatureCategories)
            {
                <li>
                    <div class="col card mesure-size">
                        <input class="btn-check tabulation_needed" name="LesionNaturesChecked" type="checkbox" value="@natureLesion.Label" id="@natureLesion.Label" onclick="clickItemLesionNature(@natureLesion.ID, '@ViewBag.startAtZeroOrNotLesionNature')">
                        <label class="btn btn-outline-secondary card-body" for="@natureLesion.Label"> @natureLesion.Label </label>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="col">
        <ul id="listNatureLesionDetails" style="list-style:none;">
            @foreach (var lesionNatureDetail in ViewBag.lesionNatureDetails)
            {
                <li>
                    <div class="card @lesionNatureDetail.Code childElNature col" style="display: none;">
                        <input class="btn-check tabulation_needed necessaryField check-lesions-nature" name="LesionNaturesDetailsChecked" type="checkbox" value="@lesionNatureDetail.Label" id="@lesionNatureDetail.Label" onclick="changeIsNecessaryCheckoxList('check-lesions-nature')" onchange="saveLocallyCustom(this.id, 'nature')">
                        <label class="btn btn-outline-secondary card-body" for="@lesionNatureDetail.Label"> @lesionNatureDetail.Label </label>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/js/natureLesion.js")"></script>