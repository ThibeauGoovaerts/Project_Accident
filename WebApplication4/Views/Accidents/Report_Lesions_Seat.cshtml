<link rel="stylesheet" href="~/css/humanBody.css" asp-append-version="true" />


<div class="human-body row">
    <div class="col human-body-left">
        <div class="row button-body">
            <div class="col card indeterminateLesionSeat">
                <input type="checkbox" class="btn-check card-body tabulation_needed necessaryField check-lesions" name="IndeterminateLesionSeatCheckbox" value="Localisation de la blessure non déterminée" id="indeterminateSeatLesion" autocomplete="off" onclick="clickItemLesionSeat(1, '@ViewBag.startAtZeroOrNotLesionSeat', 'indeterminateSeatLesion'); changeIsNecessaryCheckoxList('check-lesions')">
                <label class="btn btn-outline-secondary card-body" for="indeterminateSeatLesion">Non déterminé</label>
            </div>
            <div class="col card allBodyLesionSeat">
                <input type="checkbox" class="btn-check card-body tabulation_needed necessaryField check-lesions" name="AllBodyLesionSeatCheckbox" value="Ensemble du corps et endroits multiples, sans autre spécification" id="allBodySeatLesion" autocomplete="off" onclick="clickItemLesionSeat(8, '@ViewBag.startAtZeroOrNotLesionSeat', 'allBodySeatLesion'); changeIsNecessaryCheckoxList('check-lesions')">
                <label class="btn btn-outline-secondary card-body" for="allBodySeatLesion">Ensemble du corps</label>
            </div>
        </div>
        <div class="row button-body">
            <div class="col card otherLesionSeat">
                <input type="checkbox" class="btn-check card-body tabulation_needed necessaryField check-lesions" name="OtherLesionSeatCheckbox" value="Autres parties du corps blessées" id="otherSeatLesion" autocomplete="off" onclick="clickItemLesionSeat(9, '@ViewBag.startAtZeroOrNotLesionSeat', 'otherSeatLesion'); changeIsNecessaryCheckoxList('check-lesions')">
                <label class="btn btn-outline-secondary card-body" for="otherSeatLesion">Autre</label>
            </div>
            <div class="col turnBody">
                <label for="switchFrontBackBody"><p>Afficher le dos</p></label>
                <label class="toggleSwitch">
                    <input class="tabulation_needed" type="checkbox" id="switchFrontBackBody" name="switchFrontBackBody" />
                    <span class="slider"></span>
                </label>
                <div class="hover-text">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
                    </svg>
                    <span class="tooltip-text" id="bottomSpanTooltip">
                        <p style="list-style: none;">
                            Précisez le(s) endroit(s) de la ou les blessure(s) de la victime.
                        </p>
                    </span>
                </div>
            </div>
        </div>
        <div class="row human-body-content" style="display: flex;">
            <div class="col-sm-2" style="display: block; width: fit-content;">
                <div class="head human-body-img" id="bodyHead">
                    <img src="~/img/head.png" onclick="clickItemLesionSeat(2, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyHead')" />
                </div>
                <div class="neck human-body-img" id="bodyNeck">
                    <img src="~/img/neck.png" onclick="clickItemLesionSeat(3, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyNeck')" />
                </div>
                <div class="chest human-body-img" id="bodyChest">
                    <img src="~/img/chest.png" onclick="clickItemLesionSeat(5, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyChest')" />
                </div>
                <div class="back human-body-img" id="bodyBack">
                    <img src="~/img/back.png" onclick="clickItemLesionSeat(4, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyBack')" />
                </div>
                <div class="armLeft human-body-img" id="bodyArmLeft">
                    <img src="~/img/armLeft.png" onclick="clickItemLesionSeat(6, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyArmLeft')" />
                </div>
                <div class="armRight human-body-img" id="bodyArmRight">
                    <img src="~/img/armRight.png" onclick="clickItemLesionSeat(6, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyArmRight')" />
                </div>
                <div class="legs human-body-img" id="bodyLegs">
                    <img src="~/img/legs.png" onclick="clickItemLesionSeat(7, '@ViewBag.startAtZeroOrNotLesionSeat', 'bodyLegs')" />
                </div>
            </div>
        </div>   
    </div>

    <div class="col">
        <ul id="listLesionSeatDetail" style="list-style:none;">
            @foreach (var lesionSeatDetail in ViewBag.lesionSeatsDetails)
            {
                <li>
                    <div class="card @lesionSeatDetail.Code childElBody col" style="display: none;">
                        <input class="btn-check tabulation_needed necessaryField check-lesions" name="LesionSeatDetailChecked" type="checkbox" value="@lesionSeatDetail.Label" id="@lesionSeatDetail.Label" onclick=" changeIsNecessaryCheckoxList('check-lesions')" onchange="saveLocallyCustom(this.id, 'seat')">
                        <label class="btn btn-outline-secondary card-body" for="@lesionSeatDetail.Label" style="width:100%"> @lesionSeatDetail.Label </label>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/js/humanBody.js")"></script>
