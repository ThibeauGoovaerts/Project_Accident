@{
}

@model WebApplication4.Models.Accident

@{
    ViewData["Title"] = "Create";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "__AjaxAntiForgeryForm" }))
{
    @Html.AntiForgeryToken()
}

<link rel="stylesheet" href="~/css/toggle_switch.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/multiStepForm.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/legendeAriane.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/btnPrevNext.css" asp-append-version="true" />

<div class="navbar breadcrumb bg-white border-bottom box-shadow">
    <ol>
        <a id="home">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-house" viewBox="0 0 16 16">
                <path d="M8.707 1.5a1 1 0 0 0-1.414 0L.646 8.146a.5.5 0 0 0 .708.708L2 8.207V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V8.207l.646.647a.5.5 0 0 0 .708-.708L13 5.793V2.5a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5v1.293L8.707 1.5ZM13 7.207V13.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V7.207l5-5 5 5Z" />
            </svg>
        </a>
        <span class="step screenGeneral" onclick="showPage('screenGeneral')">Informations Générales</span>
        <span class="step screenLocation" onclick="showPage('screenLocation')">Lieu</span>
        <span class="step screenTestimony" onclick="showPage('screenTestimony')">Témoignage</span>
        <span class="step screenVictimActivity" onclick="showPage('screenVictimActivity')">Activité</span>
        <span class="step screenLesionsSeat" onclick="showPage('screenLesionsSeat')">Siège</span>
        <span class="step screenLesionsNature" onclick="showPage('screenLesionsNature')">Nature</span>
        <span class="step screenProtections" onclick="showPage('screenProtections')">Protections</span>
        <span class="step screenDeviations" onclick="showPage('screenDeviations')">Déviations</span>
        <span class="step screenAgentMateriel" onclick="showPage('screenAgentMateriel')">Agents Matériels</span>
        <span class="step screenCauses" onclick="showPage('screenCauses')">Causes</span>
        <span class="step screenMesures" onclick="showPage('screenMesures')">Mesures</span>
        <span class="step screenProba" onclick="showPage('screenProba')">Probabilité</span>
    </ol>
</div>

<div class="row">

    <div class="col-md-12">
        <div class="hover-text" style="position: absolute; top: 4em; right: 1.5em; z-index:1;">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-question-circle" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z" />
            </svg>
            <span class="tooltip-text" id="bottomSpanTooltip">
                <ul style="list-style: none;">
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#f5f3f4" class="bi bi-circle-fill" viewBox="0 0 16 16">
                            <circle cx="8" cy="8" r="8" />
                        </svg>
                        Non visitée
                    </li>
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#117ab3" class="bi bi-circle-fill" viewBox="0 0 16 16">
                            <circle cx="8" cy="8" r="8" />
                        </svg>
                        Active
                    </li>
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#c7041e" class="bi bi-circle-fill" viewBox="0 0 16 16">
                            <circle cx="8" cy="8" r="8" />
                        </svg>
                        Non completée
                    </li>
                    <li>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#018f10" class="bi bi-circle-fill" viewBox="0 0 16 16">
                            <circle cx="8" cy="8" r="8" />
                        </svg>
                        Completée
                    </li>
                </ul>
            </span>
        </div>

        <div class="container">

            <form id="formCreate" method="post" asp-action="Edit">
            
                <br />
                <div class="tab screenGeneral">
                    @{
                        await Html.RenderPartialAsync("Report_General.cshtml");
                    }
                </div>
                <div class="tab screenLocation">
                    @{
                        await Html.RenderPartialAsync("Report_Location.cshtml");
                    }
                </div>
                <div class="tab screenTestimony">
                    @{
                        await Html.RenderPartialAsync("Report_Testimony.cshtml");
                    }
                </div>
                <div class="tab screenVictimActivity">
                    @{
                        await Html.RenderPartialAsync("Report_Activity.cshtml");
                    }
                    @{
                        await Html.RenderPartialAsync("Report_WorkStop.cshtml");
                    }
                </div>
                <div class="tab screenLesionsSeat" id="screenSeat">
                    @{
                        await Html.RenderPartialAsync("Report_Lesions_Seat.cshtml");
                    }
                </div>
                <div class="tab screenLesionsNature" id="screenNature">
                    @{
                        await Html.RenderPartialAsync("Report_Lesions_Nature.cshtml");
                    }
                </div>
                <div class="tab screenProtections" id="tabProtections">
                    @{
                        await Html.RenderPartialAsync("Report_Protections.cshtml");
                    }
                </div>
                <div class="tab screenDeviations" id="tabDeviation">
                    @{
                        await Html.RenderPartialAsync("Report_Deviation.cshtml");
                    }
                </div>
                <div class="tab screenAgentMateriel" id="tabAgentMateriel">
                    @{
                        await Html.RenderPartialAsync("Report_AgentMateriel.cshtml");
                    }
                </div>
                <div class="tab screenCauses" id="tabCauses">
                    @{
                        await Html.RenderPartialAsync("Report_FundamentaryCause.cshtml");
                    }
                </div>
                <div class="tab screenMesures" id="tabMesures">
                    @{
                        await Html.RenderPartialAsync("Report_Mesures.cshtml");

                    }
                </div>
                <div class="tab screenProba">
                    @{
                        await Html.RenderPartialAsync("Report_Probability.cshtml");
                    }
                </div>
                <div style="overflow:auto;">
                    <div class="btn-previous">
                        <button type="button" class="btn btn-secondary btn-direction" id="prevBtn" onclick="nextPrev(-1)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
                            </svg>
                        </button>
                    </div>
                    <div class="btn-next">
                        <button type="button" class="btn btn-success btn-direction" id="nextBtn" onclick="nextPrev(1)">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16">
                              <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/js/multiStepForm.js")"></script>
<script type="text/javascript" src="@Url.Content("~/js/tabulation.js")"></script>
<script type="text/javascript" src="@Url.Content("~/js/parcellairejs.js")"></script>